#include<stdio.h>

int main(){
    int arr[100], even[100], odd[100];
    int i, n, j = 0, k = 0;
    
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);
    
    printf("Enter %d elements of array: ", n);
    for(i=0;i<n;i++){
        scanf("%d", &arr[i]);
        if(arr[i]%2==0){
            even[j] = arr[i];
            j++;
        }else{
            odd[k] = arr[i];
            k++;
        }
    }
    
    printf("\nEven elements in the array: ");
    for(i=0;i<j;i++){
        printf("%d ", even[i]);
    }
    
    printf("\nOdd elements in the array: ");
    for(i=0;i<k;i++){
        printf("%d ", odd[i]);
    }
    
    return 0;
}
